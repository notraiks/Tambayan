<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Tambayan.Converters"
             xmlns:local="clr-namespace:Tambayan"
             x:Class="Tambayan.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <converters:TabColorConverter x:Key="TabColorConverter"/>
            <converters:TabTextColorConverter x:Key="TabTextColorConverter"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>