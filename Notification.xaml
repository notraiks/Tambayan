<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Tambayan.Views"
            x:Class="Tambayan.Notification"
            Shell.NavBarIsVisible="False"
            BackgroundColor="#F9F9F9"
            Title="Notifications">


   <Grid RowDefinitions="Auto,*,Auto">


       <!-- Notification Title with Ellipsis -->
       <Grid ColumnDefinitions="*,Auto" Padding="20,20,20,10">
           <Label Text="Notifications"
                  FontSize="24"
                  FontAttributes="Bold"
                  HorizontalOptions="Center"
                  HorizontalTextAlignment="Center"
                  Grid.ColumnSpan="2"
                  TextColor="Black"/>

           <ImageButton Source="ellipsis_icon.png"
                        BackgroundColor="Transparent"
                        HeightRequest="10"
                        WidthRequest="10"
                        Padding="0,0,0,10"
                        HorizontalOptions="End"
                        Grid.Column="1"/>
       </Grid>


       <!-- Notification List -->
       <ScrollView Grid.Row="1">
           <VerticalStackLayout Padding="20" Spacing="10">
               <!-- Notification 1 -->
               <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="10">
                   <Frame.GestureRecognizers>
                       <TapGestureRecognizer Tapped="OnApplicantClicked" />
                   </Frame.GestureRecognizers>
                   <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                       <AbsoluteLayout WidthRequest="70" HeightRequest="70">
                           <Frame WidthRequest="60" HeightRequest="60"
                                  CornerRadius="30"
                                  BackgroundColor="#EEEEEE"
                                  Padding="8"
                                  HasShadow="False"
                                  AbsoluteLayout.LayoutBounds="0,0,60,60"
                                  AbsoluteLayout.LayoutFlags="None">
                               <Image Source="applicant.png" Aspect="AspectFit" WidthRequest="75" HeightRequest="75"/>
                           </Frame>
                           <BoxView Color="Red"
                                    WidthRequest="14"
                                    HeightRequest="14"
                                    CornerRadius="7"
                                    BackgroundColor="Transparent"
                                    AbsoluteLayout.LayoutBounds="45,45,12,12"
                                    AbsoluteLayout.LayoutFlags="None" />
                       </AbsoluteLayout>


                       <Label Grid.Column="1"
                              Text="You have a new applicant for your job post [ Wooden Table Help ]."
                              FontSize="14"
                              VerticalTextAlignment="Center"
                              TextColor="Black"
                              Margin="10,0,0,0" />


                       <Label Grid.Column="2"
                              Text="Just Now"
                              FontSize="12"
                              TextColor="Gray"
                              VerticalOptions="Start"
                              HorizontalOptions="End" />
                   </Grid>
               </Frame>


               <!-- Notification 2 -->
               <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="10">
                   <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                       <AbsoluteLayout WidthRequest="70" HeightRequest="70">
                           <Frame WidthRequest="60" HeightRequest="60"
                                  CornerRadius="30"
                                  BackgroundColor="#EEEEEE"
                                  Padding="8"
                                  HasShadow="False"
                                  AbsoluteLayout.LayoutBounds="0,0,60,60"
                                  AbsoluteLayout.LayoutFlags="None">
                               <Image Source="application.png" Aspect="AspectFit" WidthRequest="75" HeightRequest="75"/>
                           </Frame>
                           <BoxView Color="Red"
                                    WidthRequest="14"
                                    HeightRequest="14"
                                    CornerRadius="7"
                                    BackgroundColor="Transparent"
                                    AbsoluteLayout.LayoutBounds="45,45,12,12"
                                    AbsoluteLayout.LayoutFlags="None" />
                       </AbsoluteLayout>


                       <Label Grid.Column="1"
                              Text="Your application for [ House Cleaning ] was accepted. Congratulations!"
                              FontSize="14"
                              VerticalTextAlignment="Center"
                              TextColor="Black"
                              Margin="10,0,0,0" />


                       <Label Grid.Column="2"
                              Text="5h ago"
                              FontSize="12"
                              TextColor="Gray"
                              VerticalOptions="Start"
                              HorizontalOptions="End" />
                   </Grid>
               </Frame>


               <!-- Notification 3 -->
               <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="10">
                   <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                       <AbsoluteLayout WidthRequest="70" HeightRequest="70">
                           <Frame WidthRequest="60" HeightRequest="60"
                                  CornerRadius="30"
                                  BackgroundColor="#EEEEEE"
                                  Padding="8"
                                  HasShadow="False"
                                  AbsoluteLayout.LayoutBounds="0,0,60,60"
                                  AbsoluteLayout.LayoutFlags="None">
                               <Image Source="msg_request.png" Aspect="AspectFit" WidthRequest="75" HeightRequest="75"/>
                           </Frame>
                           <BoxView Color="Red"
                                    WidthRequest="14"
                                    HeightRequest="14"
                                    CornerRadius="7"
                                    BackgroundColor="Transparent"
                                    AbsoluteLayout.LayoutBounds="45,45,12,12"
                                    AbsoluteLayout.LayoutFlags="None" />
                       </AbsoluteLayout>


                       <Label Grid.Column="1"
                              Text="You received a new message from [Alex D.]."
                              FontSize="14"
                              VerticalTextAlignment="Center"
                              TextColor="Black"
                              Margin="10,0,0,0" />


                       <Label Grid.Column="2"
                              Text="2d ago"
                              FontSize="12"
                              TextColor="Gray"
                              VerticalOptions="Start"
                              HorizontalOptions="End" />
                   </Grid>
               </Frame>


               <!-- Notification 4 -->
               <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="10">
                   <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                       <AbsoluteLayout WidthRequest="70" HeightRequest="70">
                           <Frame WidthRequest="60" HeightRequest="60"
                                  CornerRadius="30"
                                  BackgroundColor="#EEEEEE"
                                  Padding="8"
                                  HasShadow="False"
                                  AbsoluteLayout.LayoutBounds="0,0,60,60"
                                  AbsoluteLayout.LayoutFlags="None">
                               <Image Source="announcement.png" Aspect="AspectFit" WidthRequest="75" HeightRequest="75"/>
                           </Frame>
                           <BoxView Color="Red"
                                    WidthRequest="14"
                                    HeightRequest="14"
                                    CornerRadius="7"
                                    BackgroundColor="Transparent"
                                    AbsoluteLayout.LayoutBounds="45,45,12,12"
                                    AbsoluteLayout.LayoutFlags="None" />
                       </AbsoluteLayout>


                       <Label Grid.Column="1"
                              Text="New update: Improved performance and bug fixes."
                              FontSize="14"
                              VerticalTextAlignment="Center"
                              TextColor="Black"
                              Margin="10,0,0,0" />


                       <Label Grid.Column="2"
                              Text="3d ago"
                              FontSize="12"
                              TextColor="Gray"
                              VerticalOptions="Start"
                              HorizontalOptions="End" />
                   </Grid>
               </Frame>


               <!-- Notification 5 -->
               <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="10">
                   <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                       <AbsoluteLayout WidthRequest="70" HeightRequest="70">
                           <Frame WidthRequest="60" HeightRequest="60"
                                  CornerRadius="30"
                                  BackgroundColor="#EEEEEE"
                                  Padding="8"
                                  HasShadow="False"
                                  AbsoluteLayout.LayoutBounds="0,0,60,60"
                                  AbsoluteLayout.LayoutFlags="None">
                               <Image Source="job_match.png" Aspect="AspectFit" WidthRequest="95" HeightRequest="95"/>
                           </Frame>
                           <BoxView Color="Red"
                                    WidthRequest="14"
                                    HeightRequest="14"
                                    CornerRadius="7"
                                    BackgroundColor="Transparent"
                                    AbsoluteLayout.LayoutBounds="45,45,12,12"
                                    AbsoluteLayout.LayoutFlags="None" />
                       </AbsoluteLayout>


                       <Label Grid.Column="1"
                              Text="New job posted: Matches your skills “Setting-up Online Shop...”"
                              FontSize="14"
                              VerticalTextAlignment="Center"
                              TextColor="Black"
                              Margin="10,0,0,0" />


                       <Label Grid.Column="2"
                              Text="5d ago"
                              FontSize="12"
                              TextColor="Gray"
                              VerticalOptions="Start"
                              HorizontalOptions="End" />
                   </Grid>
               </Frame>


               <!-- Notification 6 -->
               <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="10">
                   <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                       <AbsoluteLayout WidthRequest="70" HeightRequest="70">
                           <Frame WidthRequest="60" HeightRequest="60"
                                  CornerRadius="30"
                                  BackgroundColor="#EEEEEE"
                                  Padding="8"
                                  HasShadow="False"
                                  AbsoluteLayout.LayoutBounds="0,0,60,60"
                                  AbsoluteLayout.LayoutFlags="None">
                               <Image Source="comment.png" Aspect="AspectFit" WidthRequest="75" HeightRequest="75"/>
                           </Frame>
                           <BoxView Color="Red"
                                    WidthRequest="14"
                                    HeightRequest="14"
                                    CornerRadius="7"
                                    BackgroundColor="Transparent"
                                    AbsoluteLayout.LayoutBounds="45,45,12,12"
                                    AbsoluteLayout.LayoutFlags="None" />
                       </AbsoluteLayout>


                       <Label Grid.Column="1"
                              Text="Kiven commented on your post: “Lorem ipsum...”"
                              FontSize="14"
                              VerticalTextAlignment="Center"
                              TextColor="Black"
                              Margin="10,0,0,0" />


                       <Label Grid.Column="2"
                              Text="1w ago"
                              FontSize="12"
                              TextColor="Gray"
                              VerticalOptions="Start"
                              HorizontalOptions="End" />
                   </Grid>
               </Frame>
               
               <!-- Notification 7 -->
               <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="10">
                   <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                       <AbsoluteLayout WidthRequest="70" HeightRequest="70">
                           <Frame WidthRequest="60" HeightRequest="60"
                                  CornerRadius="30"
                                  BackgroundColor="#EEEEEE"
                                  Padding="8"
                                  HasShadow="False"
                                  AbsoluteLayout.LayoutBounds="0,0,60,60"
                                  AbsoluteLayout.LayoutFlags="None">
                               <Image Source="liked_post.png" Aspect="AspectFit" WidthRequest="75" HeightRequest="75"/>
                           </Frame>
                           <BoxView Color="Red"
                                    WidthRequest="14"
                                    HeightRequest="14"
                                    CornerRadius="7"
                                    BackgroundColor="Transparent"
                                    AbsoluteLayout.LayoutBounds="45,45,12,12"
                                    AbsoluteLayout.LayoutFlags="None" />
                       </AbsoluteLayout>


                       <Label Grid.Column="1"
                              Text="Junel liked your post: “Affordable tools for beginners...“ "
                              FontSize="14"
                              VerticalTextAlignment="Center"
                              TextColor="Black"
                              Margin="10,0,0,0" />


                       <Label Grid.Column="2"
                              Text="1w ago"
                              FontSize="12"
                              TextColor="Gray"
                              VerticalOptions="Start"
                              HorizontalOptions="End" />
                   </Grid>
               </Frame>


           </VerticalStackLayout>
       </ScrollView>
       <!-- Custom Bottom Navigation Bar -->
       <views:BottomNavBar Grid.Row="2" />
       
   </Grid>
</ContentPage>



