<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Tambayan.Views"
             x:Class="Tambayan.Profile"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">
   
    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="0,0" Spacing="15">

            <!-- Header Section -->
            <Grid HeightRequest="260">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0047FF" Offset="0.0"/>
                        <GradientStop Color="#009DFF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <HorizontalStackLayout Padding="15,0,0, 200" HorizontalOptions="FillAndExpand" Spacing="0">
                    <Image Source="info_icon.png" HeightRequest="30" WidthRequest="30"/>
                    <BoxView WidthRequest="240" BackgroundColor="Transparent"/>
                    <Image Source="application_icon.png" HeightRequest="30" WidthRequest="30"/>
                    <BoxView WidthRequest="10" BackgroundColor="Transparent"/>
                    <Image Source="save_icon.png" HeightRequest="30" WidthRequest="30"/>
                    <BoxView WidthRequest="10" BackgroundColor="Transparent"/>
                    <Image Source="settings_icon.png" HeightRequest="30" WidthRequest="30"/>
                </HorizontalStackLayout>

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10" Padding="4, 50, 4, 4">
                    <Frame Padding="4" CornerRadius="120" BackgroundColor="White" HasShadow="False">
                        <Image Source="gus.jpg"
                               HeightRequest="120"
                               WidthRequest="120"
                               Aspect="AspectFill">
                            <Image.Clip>
                                <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60"/>
                            </Image.Clip>
                        </Image>
                    </Frame>

                    <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                        <HorizontalStackLayout Spacing="-1" VerticalOptions="Center">
                            <Label Text="Gustavo Fring"
                                   Padding="0,0,4,0"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Image Source="editw_icon.png"
                                   HeightRequest="20"
                                   WidthRequest="20"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Label Text="Mandaue City, Cebu"
                               FontSize="13"
                               TextColor="#E5E5E5"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Grid>

            <!-- Progress Bar Section -->
            <Grid Padding="20,0">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                    <Frame Grid.Row="0"
                           Grid.Column="0"
                           HeightRequest="20"
                           CornerRadius="10"
                           BackgroundColor="#E0E0E0"
                           Padding="0"
                           HasShadow="False"
                           VerticalOptions="Center">
                        <!-- Full-width blue progress overlay inside the frame -->
                        <Grid>
                            <BoxView HeightRequest="15"
                                     CornerRadius="10"
                                     HorizontalOptions="Start"
                                     WidthRequest="1000" 
                                     BackgroundColor="#0047FF"/>
                        </Grid>
                    </Frame>

                    <Frame Grid.Row="0"
                           Grid.Column="1"
                           HeightRequest="40"
                           WidthRequest="40"
                           BackgroundColor="White"
                           BorderColor="#0047FF"
                           CornerRadius="25"
                           Padding="2"
                           Margin="-12,0,0,0"
                           VerticalOptions="Center"
                           HasShadow="True">
                        <Image Source="verified_icon.png" HeightRequest="40" WidthRequest="40"/>
                    </Frame>

                    <Label Grid.Row="1" Grid.ColumnSpan="2"
                           Text="100% | Verified"
                           FontSize="13"
                           TextColor="#666"
                           HorizontalOptions="Center"
                           Margin="0,4,0,0"/>
                </Grid>
            </Grid>

            <!-- Tab Navigation -->
            <Grid ColumnDefinitions="*,*" HeightRequest="45" BackgroundColor="#F5F5F5">
                    <Button Text="About Me"
                            FontAttributes="Bold"
                            BackgroundColor="#0047FF"
                            TextColor="White"/>
                <Button Grid.Column="1"
                        Text="Activities"
                        BackgroundColor="Transparent"
                        TextColor="#777"/>
            </Grid>

            <!-- Bio Section -->
            <VerticalStackLayout Padding="20,0">
                <Label Text="Bio" FontSize="16" FontAttributes="Bold"/>
                <Frame BackgroundColor="#FAFAFA"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="12">
                    <Label Text="Hello! I am Gus, former employee of Los Pollos Hermanos. I am hardworking and incredibly detailed. Feel free to reach out!"
                           FontSize="14"
                           TextColor="#444"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Skills Section -->
            <VerticalStackLayout Padding="20,0">
                <Label Text="Skills" FontSize="16" FontAttributes="Bold"/>
                <FlexLayout Wrap="Wrap" Direction="Row" Margin="0,5,0,0" AlignItems="Start">
                    <Frame BackgroundColor="#DDF1FA" Padding="10,5" CornerRadius="20" Margin="0,0,8,8">
                        <Label Text="Virtual Assistant" FontSize="13" TextColor="#0077B6"/>
                    </Frame>
                    <Frame BackgroundColor="#DDF1FA" Padding="10,5" CornerRadius="20" Margin="0,0,8,8">
                        <Label Text="Content Creator" FontSize="13" TextColor="#0077B6"/>
                    </Frame>
                    <Frame BackgroundColor="#DDF1FA" Padding="10,5" CornerRadius="20" Margin="0,0,8,8">
                        <Label Text="Organizer" FontSize="13" TextColor="#0077B6"/>
                    </Frame>
                    <Frame BackgroundColor="#DDF1FA" Padding="10,5" CornerRadius="20" Margin="0,0,8,8">
                        <Label Text="Web Developer" FontSize="13" TextColor="#0077B6"/>
                    </Frame>
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Media Section -->
            <VerticalStackLayout Padding="20,0">
                <Label Text="Media" FontSize="16" FontAttributes="Bold"/>
                <CollectionView ItemsLayout="HorizontalList" Margin="0,10,0,0">
                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>gus1.jpg</x:String>
                            <x:String>gus2.jpg</x:String>
                            <x:String>gus3.jpg</x:String>
                        </x:Array>
                    </CollectionView.ItemsSource>
                    <CollectionView.ItemTemplate>
                        <!-- <DataTemplate> -->
                        <!--     <Image Source="{Binding .}" HeightRequest="100" WidthRequest="100" Aspect="AspectFill" Margin="0,0,10,0"/> -->
                        <!-- </DataTemplate> -->
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Education Section -->
            <VerticalStackLayout Padding="20,10">
                <Label Text="Education" FontSize="16" FontAttributes="Bold"/>

                <Frame BorderColor="#E0E0E0" CornerRadius="12" Padding="10" HasShadow="False">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10">

                        <!-- Circular Frame with Elliptical Clipped Icon -->
                        <Frame WidthRequest="60" HeightRequest="60"
                               Padding="5"
                               CornerRadius="30"
                               BackgroundColor="#DADADA"
                               HasShadow="False"
                               VerticalOptions="Center"
                               Grid.RowSpan="2">
                            <Image Source="graduate_icon.png"
                                   WidthRequest="60" HeightRequest="60"
                                   Aspect="AspectFill"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                                <Image.Clip>
                                    <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                                </Image.Clip>
                            </Image>
                        </Frame>

                        <!-- School and Course Info -->
                        <Label Text="Mandaue High School"
                               FontAttributes="Bold"
                               FontSize="15"
                               Grid.Column="1"/>
                        <Label Text="TVET - Carpentry&#x0a;2020–2024"
                               FontSize="13"
                               TextColor="#777"
                               Grid.Column="1"
                               Grid.Row="1"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

            <!-- Experience Section -->
            <VerticalStackLayout Padding="20,0">
                <Label Text="Experience" FontSize="16" FontAttributes="Bold"/>
                <Frame BorderColor="#E0E0E0" CornerRadius="12" Padding="10" HasShadow="False">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Frame WidthRequest="60" HeightRequest="60"
                               Padding="5"
                               CornerRadius="30"
                               BackgroundColor="#DADADA"
                               HasShadow="False"
                               VerticalOptions="Center"
                               Grid.RowSpan="2">
                            <Image Source="work_icon.png"
                                   WidthRequest="60" HeightRequest="60"
                                   Aspect="AspectFill"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                                <Image.Clip>
                                    <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                                </Image.Clip>
                            </Image>
                        </Frame>
                        <Label Text="Carpenter" FontAttributes="Bold" Grid.Column="1"/>
                        <Label Text="JW Wood Furniture&#x0a;2016–2021" FontSize="13" TextColor="#777" Grid.Column="1" Grid.Row="1"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

            <!-- Ratings Section -->
            <VerticalStackLayout Padding="20,0" Margin="0,0,0,30">
                <Label Text="Ratings and Reviews" FontSize="16" FontAttributes="Bold"/>
                <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                    <Image Source="starfill_icon.png" HeightRequest="24"/>
                    <Image Source="starfill_icon.png" HeightRequest="24"/>
                    <Image Source="starfill_icon.png" HeightRequest="24"/>
                    <Image Source="star_icon.png" HeightRequest="24"/>
                    <Image Source="star_icon.png" HeightRequest="24"/>
                    <Label Text="4.2 | 12k Ratings" FontSize="13" TextColor="#444" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </VerticalStackLayout>        
    </ScrollView>
        <views:BottomNavBar Grid.Row="1" />
    </Grid>
</ContentPage>
