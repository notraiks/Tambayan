                                 Source="chat_icon.png"
                                 BackgroundColor="Transparent"
                                 WidthRequest="28"
                                 HeightRequest="28"
                                 Margin="0,15,10,0"
                                 VerticalOptions="Start"
                                 HorizontalOptions="End"/>

                    <!-- ℹ️ Info Badges -->
                    <FlexLayout Grid.Row="2" Grid.ColumnSpan="3"
                                Wrap="Wrap"
                                Direction="Row"
                                JustifyContent="Start"
                                AlignItems="Center"
                                Margin="15,10,15,0">
                        <Frame Padding="5,2"
                               Margin="0,5,5,5"
                               CornerRadius="12"
                               BackgroundColor="#F0F0F0"
                               HasShadow="False">
                            <Label Text="📍 Consolacion" FontSize="12" TextColor="#444"/>
                        </Frame>
                        <Frame Padding="5,2"
                               Margin="0,5,5,5"
                               CornerRadius="12"
                               BackgroundColor="#F0F0F0"
                               HasShadow="False">
                            <Label Text="⏱ Full-Time" FontSize="12" TextColor="#444"/>
                        </Frame>
                        <Frame Padding="5,2"
                               Margin="0,5,5,5"
                               CornerRadius="12"
                               BackgroundColor="#F0F0F0"
                               HasShadow="False">
                            <Label Text="📆 2 Weeks" FontSize="12" TextColor="#444"/>
                        </Frame>
                    </FlexLayout>

                    <!-- 📋 Requirements with Check Icons -->
                    <Grid Grid.Row="3" Grid.ColumnSpan="3"
                          ColumnDefinitions="*,Auto"
                          Padding="15,5,15,0">

                        <!-- 📋 Requirements -->
                        <VerticalStackLayout Grid.Column="0"
                                             Spacing="5"
                                             VerticalOptions="Start">
                            <Label Text="Requirements:"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>
                            <HorizontalStackLayout Spacing="5">
                                <Image Source="check_icon.png" WidthRequest="16" HeightRequest="16"/>
                                <Label Text="Contact Information" FontSize="11" TextColor="#333"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="5">
                                <Image Source="check_icon.png" WidthRequest="16" HeightRequest="16"/>
                                <Label Text="Resume" FontSize="11" TextColor="#333"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="5">
                                <Image Source="check_icon.png" WidthRequest="16" HeightRequest="16"/>
