                                   HasShadow="False">
                                <Label Text="📆 2 Weeks" FontSize="12" TextColor="#444"/>
                            </Frame>
                        </FlexLayout>

                        <!-- 📋 Requirements with Check Icons -->
                        <Grid Grid.Row="3" Grid.ColumnSpan="3"
                              ColumnDefinitions="*,Auto"
                              Padding="15,5,15,0">

                            <!-- 📋 Requirements -->
                            <VerticalStackLayout Grid.Column="0"
                                                 Spacing="5"
